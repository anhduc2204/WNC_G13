@model WNC_G13.Models.ChatChannel

<h2>Tạo Kênh Trò Chuyện Mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ChannelName">Tên Kênh</label>
        <input asp-for="ChannelName" class="form-control" />
        <span asp-validation-for="ChannelName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ChannelType">Loại Kênh</label>
        <input asp-for="ChannelType" class="form-control" />
        <span asp-validation-for="ChannelType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Tạo Kênh</button>
    <a href="@Url.Action("Index", "Chat")" class="btn btn-secondary">Quay lại</a> 
</form>
