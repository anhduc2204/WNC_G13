@model WNC_G13.Models.User

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Cá Nhân</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2rem;
            color: #333;
            text-align: center;
        }

        .profile-card {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fafafa;
        }

        .profile-card h2 {
            font-size: 1.5rem;
            color: #333;
            text-align: center;
        }

        .profile-card p {
            font-size: 1rem;
            margin: 10px 0;
            color: #555;
        }

        .profile-card strong {
            color: #333;
        }

        .profile-card a {
            display: block;
            margin-top: 20px;
            text-align: center;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

        .profile-card a:hover {
            background-color: #0056b3;
        }

        ul {
            list-style: none;
            padding: 0;
            margin-top: 20px;
        }

        ul li {
            margin: 10px 0;
            text-align: center;
        }

        ul li a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        ul li a:hover {
            text-decoration: underline;
        }

        .back-link {
            display: block;
            margin-top: 30px;
            text-align: center;
            font-size: 1rem;
            color: #007bff;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Thông Tin Cá Nhân</h1>

        <div class="profile-card">
            <h2>@Model.FullName</h2>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
            <p><strong>Ngày sinh:</strong> @Model.Birthday?.ToString("dd/MM/yyyy")</p>
            <p><strong>Địa chỉ:</strong> @Model.Address</p>
            <p><strong>Ngày đăng ký:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
            <p><strong>Vai trò:</strong> @(Model.Role == 1 ? "Admin" : "User")</p>

            @* <a href="@Url.Action("ChangePassword", "Account")">Đổi mật khẩu</a> *@
        </div>

        <a href="/Home/Index" class="back-link">Quay lại trang chủ</a>
    </div>

</body>

</html>
