@model WNC_G13.Models.Organization

<h2>Tạo Tổ Chức</h2>

@if (ViewBag.UserId != null)
{
    <p>ID Người Dùng: @ViewBag.UserId</p>
}
else
{
    <p>ID Người Dùng chưa được thiết lập.</p>
}

<link rel="stylesheet" href="~/css/styles.css" />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Tên Tổ Chức</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubscriptionPlan">Kế Hoạch Đăng Ký</label>
        <input asp-for="SubscriptionPlan" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StorageLimit">Giới Hạn Lưu Trữ</label>
        <input asp-for="StorageLimit" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="UsedStorage">Lưu Trữ Đã Sử Dụng</label>
        <input asp-for="UsedStorage" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="CreatedBy">Người Tạo</label>
        <input asp-for="CreatedBy" class="form-control" value="@ViewBag.UserId" readonly />
    </div>
    @* <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
    </div> *@
    <button type="submit" class="btn btn-primary">Tạo</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
